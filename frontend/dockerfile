# Multi-stage build for React application
# Stage 1: Build the React app
FROM node:22-slim AS builder

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Declare build arguments
ARG REACT_APP_API_BASE_URL
ARG REACT_APP_FINGERPRINT_SERVICE_URL

# Set environment variables from build arguments
ENV REACT_APP_API_BASE_URL=$REACT_APP_API_BASE_URL
ENV REACT_APP_FINGERPRINT_SERVICE_URL=$REACT_APP_FINGERPRINT_SERVICE_URL

# Build the React app (environment variables will be embedded)
RUN npm run build

# Expose port 3000 and serve the app
EXPOSE 3000

# Serve the built app
CMD [ "npx", "serve", "-s", "build" ]


